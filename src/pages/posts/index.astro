---
import BaseLayout from '../../layouts/page.astro'
const data =  await Astro.glob('../blog/*.md');
---
<BaseLayout>
    <>
        <div class="text-right flex justify-center px-4 sm:px-6 md:px-8 py-3">
            <h2>تدويناتي</h2>
        </div>
        <section class="flex flex-row flex-wrap items-center justify-center rounded">
            {
            
                 data.filter(post => !post.frontmatter.draft).reverse().map((post)=> {
                    return (<div class="card">
                    <a href={post.url}>
                    <img width="3440" height="1440" class="tag-card" src={post.frontmatter.image} />
                        <div class="card-info">
                        <h1>{post.frontmatter.title}</h1>
                        </div>
                    </a>
                    </div>)
                 })
            }
        </section>
    </>
</BaseLayout>
